{
    "name": "Pytorch GPU",
    "image": "nvcr.io/nvidia/pytorch:25.03-py3",

    "runArgs": [
        "--gpus=all"
    ],

    // 5. Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-toolsai.jupyter",
                "ms-toolsai.jupyter-keymap",
                "ms-toolsai.vscode-jupyter-cell-tags",
                "ms-toolsai.jupyter-renderers",
                "ms-toolsai.vscode-jupyter-slideshow",
                "ms-toolsai.tensorboard",
                "charliermarsh.ruff"
            ]
        }
    },
    
    // 6. Set `remoteUser` to `root` to connect as root instead.
    // --- 為了簡化，我們先以 root 身份登入 ---
    "remoteUser": "root"
}